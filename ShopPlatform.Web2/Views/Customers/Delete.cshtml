@model ShopPlatform.Web2.Services.Customer

<h2>Delete Customer</h2>
<h4>Are you sure you want to delete this customer?</h4>

<div>
    <h5>@Model.CompanyName</h5>
    <p><strong>Contact:</strong> @Model.ContactName (@Model.ContactTitle)</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Phone:</strong> @Model.Phone</p>
    <p><strong>Address:</strong> @Model.Address, @Model.City, @Model.Country</p>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="CustId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>