@model ShopPlatform.Web2.Services.Employee

<h2>Delete Employee</h2>
<h4>Are you sure you want to delete this employee?</h4>

<div>
    <h5>@Model.FullName</h5>
    <p><strong>Title:</strong> @Model.Title</p>
    <p><strong>Hire Date:</strong> @Model.HireDate.ToString("yyyy-MM-dd")</p>
    <p><strong>Phone:</strong> @Model.Phone</p>
    <p><strong>Address:</strong> @Model.Address, @Model.City, @Model.Country</p>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="EmpId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
