@model ShopPlatform.Web2.Services.Product

<h2>Product Details</h2>

<div>
    <h4>@Model.ProductName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">ID</dt>
        <dd class="col-sm-9">@Model.ProductId</dd>

        <dt class="col-sm-3">Product Name</dt>
        <dd class="col-sm-9">@Model.ProductName</dd>

        <dt class="col-sm-3">Supplier ID</dt>
        <dd class="col-sm-9">@Model.SupplierId</dd>

        <dt class="col-sm-3">Category ID</dt>
        <dd class="col-sm-9">@Model.CategoryId</dd>

        <dt class="col-sm-3">Unit Price</dt>
        <dd class="col-sm-9">@Model.FormattedPrice</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.Status</dd>

        <dt class="col-sm-3">Discontinued</dt>
        <dd class="col-sm-9">@Model.Discontinued</dd>

        <dt class="col-sm-3">Deleted</dt>
        <dd class="col-sm-9">@Model.Deleted</dd>

        <dt class="col-sm-3">Creation</dt>
        <dd class="col-sm-9">@Model.CreationDate (User: @Model.CreationUser)</dd>

        <dt class="col-sm-3">Last Modify</dt>
        <dd class="col-sm-9">@Model.ModifyDate (User: @Model.ModifyUser)</dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
